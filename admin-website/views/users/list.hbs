    {{>nav-bars}}

</nav>

<div id="wrapper">

    <!-- Sidebar -->
    {{>sidebar}}

    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">{{pageTitle}}</li>
            </ol>


            <!-- Page Content -->

            <!-- Editable table -->
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <a href="users/add"><button type="button" class="btn btn-success">Thêm mới</button></a>
                    </div>
                    </br>
                    <div id="myModal" class="modal fade" role="dialog">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <div class="row content">
                                        <div class="col-sm-12">
                                            <div class="panel panel-success">
                                                <div class="panel-heading" style="font-size: 25px;font-weight: bold; background-color: rgb(28, 188, 156);color: white"> Người dùng</div>
                                                <div class="panel-body">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <form class="form-horizontal">
                                                                <div class="form-group">
                                                                    <label for="madh" class="col-md-4 control-label">Tên người dùng</label>
                                                                    <div class="col-md-8">
                                                                        <input type="text" class="form-control" id="madh" required>
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label for="masp" class="col-md-4 control-label">Username</label>
                                                                    <div class="col-md-8">
                                                                        <input type="text" class="form-control" id="masp"  required>
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label for="masp" class="col-md-4 control-label">Password</label>
                                                                    <div class="col-md-8">
                                                                        <input type="text" class="form-control" id="masp"  required>
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label for="kh" class="col-md-4 control-label">Địa chỉ</label>
                                                                    <div class="col-md-8">
                                                                        <input type="text" class="form-control" id="kh"  required>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <form class="form-horizontal">
                                                                <div class="form-group">
                                                                    <label for="nl" class="col-md-4 control-label">Email</label>
                                                                    <div class="col-md-8">
                                                                        <input type="text" class="form-control" id="kh"  required>
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label for="tt" class="col-md-4 control-label">Số điện thoại</label>
                                                                    <div class="col-md-8">
                                                                        <input type="text" class="form-control" id="kh"  required>
                                                                    </div>
                                                                </div>

                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="panel-footer">
                                                    <div class="row">
                                                        <button type="button" class="btn btn-warning" style="float: right;margin-right: 120px;background-color: rgb(28, 188, 156);font-size: 16px;color: white" onclick="add()">Submit</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End mainmenu area -->

                    <div class="row content">
                        <div class="panel-body">
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane active" id="list" style="height: 300px;overflow: auto;">
                                    <table class="table table-striped table-bordered table-list" id="ta1">
                                        <thead>
                                        <tr>
                                            <th>Tên người dùng</th>
                                            <th>Username</th>
                                            <th>Email</th>
                                            <th>Địa chỉ</th>
                                            <th>Số điện thoại</th>
                                            <th>Chức năng</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {{#each customerList}}
                                            <tr>
                                                <td>{{this.info.name}}</td>
                                                <td>{{this.username}}</td>
                                                <td>{{this.info.email}}</td>
                                                <td>{{this.info.address}}</td>
                                                <td>{{this.info.sdt}}</td>
                                                <td>
                                                    <!--<button  type="button" class="btn btn-info btn-xs" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-pencil"></span> Sửa</button>
                                                    <button  type="button" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span> Xóa</button>-->
                                                    <a href="users/update/{{this._id}}"> <i class="fa fa-pen fa-lg" aria-hidden="=true"></i> </a>
                                                    <a href="users/delete/{{this._id}}" onclick="return confirm ('Bạn có chắc chắn muốn xóa ?');" > <i class="fa fa-trash fa-lg" aria-hidden="=true"></i></a>
                                                </td>
                                            </tr>
                                        {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Editable table -->
            <!-- /.container-fluid -->

            <!-- Sticky Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © Your Website 2019</span>
                    </div>
                </div>
            </footer>

        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
{{>logout}}

