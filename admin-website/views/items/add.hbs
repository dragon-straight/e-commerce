<nav class="navbar navbar-expand navbar-dark bg-dark static-top">

    {{> nav-bars}}

</nav>

<div id="wrapper">

    <!-- Sidebar -->
    {{>sidebar}}

    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">{{pageTitle}}</li>
            </ol>


            <!-- Page Content -->

                        <div class="modal-body">
                            <div class="row content">
                                <div class="col-sm-12">
                                    <form method="POST" enctype="multipart/form-data" action="/admin/quanlysanpham/add" class="form-horizontal">
                                        <div class="panel panel-success">
                                            <div class="panel-heading" style="font-size: 25px;font-weight: bold; background-color: rgb(28, 188, 156);color: white"> &nbsp; Thêm mới Sản Phẩm</div>
                                            <div class="panel-body">
                                                <div class="row">
                                                    <div class="col-md">
                                                        <div class="form-group">
                                                            <label for="tesp" class="col-md-4 control-label">Tên Sản Phẩm</label>
                                                            <div class="col-md-8">
                                                                <input type="text" class="form-control" id="tesp" name="tesp" required>
                                                            </div>
                                                        </div>

                                                        <div class="form-group">
                                                            <label for="tesp" class="col-md-4 control-label">Nhà Sản Xuất</label>
                                                            <div class="col-md-8">
                                                                <input type="text" class="form-control" id="tesp" name="tesp" required>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="xux" class="col-md-4 control-label">Xuất Xứ</label>
                                                            <div class="col-md-8">
                                                                <input type="text" class="form-control" id="xux" name="xux" required>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="tesp" class="col-md-4 control-label">Loại Sản Phẩm</label>
                                                            <div class="col-md-8">
                                                                <input type="text" class="form-control" id="tesp" name="tesp" required>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="mt" class="col-md-4 control-label">Mô Tả</label>
                                                            <div class="col-md-8">
                                                                <textarea id="mt" name="mt" cols="33" rows="5" required></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="file" class="col-md-4 control-label">Hình Ảnh</label>
                                                            <div class="col-md-8">
                                                                <input type="file" accept="image/*" class="form-control" name="ha" id="file" required onchange="readURL(this);">
                                                                <img id="pic" src="#" alt="Hình ảnh sản phẩm" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="kt1" class="col-md-4 control-label">Size còn</label>
                                                            <div class="col-md-8">
                                                                <input type="text" class="form-control" id="kt" name="kt" required>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="gb1" class="col-md-4 control-label">Số lượng</label>
                                                            <div class="col-md-8">
                                                                <input type="number" class="form-control" id="gb" name="gb" required>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="panel-footer">
                                                <div class="row">
                                                    <button type="submit" class="btn btn-default" style="float: right;margin-right: 120px;background-color: rgb(28, 188, 156);font-size: 16px;color: white" onclick="add()">Thêm mới</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright © Your Website 2019</span>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.content-wrapper -->

</div>
<!-- /#wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

