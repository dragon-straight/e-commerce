            <div id="customerModal" class="modal fade" role="dialog" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h1 class="modal-title"><span class="fa fa-pencil-square-o" aria-hidden="true" style="color: black;"></span></h1>
                        </div>
                        <div class="modal-body">
                            <div class="row content">
                                <div class="col-sm-12">
                                    <div class="panel panel-success">
                                        <div class="panel-heading" style="font-size: 25px;font-weight: bold; background-color: black;color: white"><span class="fas fa-user-alt" aria-hidden="true" style="color: white;"></span> Thông tin khách hàng</div>
                                        <div class="panel-body">
                                            <div class="row">
                                                <table class="table table-striped table-bordered table-list" id="ta1">
                                                    <thead>
                                                    <tr>
                                                        <th>Họ tên</th>
                                                        <th>Địa chỉ</th>
                                                        <th>Số điện thoại</th>
                                                        <th>Email</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    <tr>
                                                        <td>{{infoCustomer.name}}</td>
                                                        <td>{{infoCustomer.address}}</td>
                                                        <td>{{infoCustomer.sdt}}</td>
                                                        <td>{{infoCustomer.email}}</td>
                                                    </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Đóng</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Popup product list-->
            <div id="productModal" class="modal fade" role="dialog">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h1 class="modal-title"><span class="fa fa-pencil-square-o" aria-hidden="true" style="color: black;"></span></h1>
                        </div>
                        <div class="modal-body">
                            <div class="row content">
                                <div class="col-sm-12">
                                    <div class="panel panel-success">
                                        <div class="panel-heading" style="font-size: 25px;font-weight: bold; background-color: black;color: white"><span class="fas fa-user-alt" aria-hidden="true" style="color: white;"></span> Thông tin khách hàng</div>
                                        <div class="panel-body">
                                            <div class="row">
                                                <table class="table table-striped table-bordered table-list" id="ta1">
                                                    <thead>
                                                    <tr>
                                                        <th>ID</th>
                                                        <th>Tên sản phẩm</th>
                                                        <th>Đơn giá</th>
                                                        <th>Số lượng</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {{#each this.productList}}
                                                        <tr>
                                                            <td>{{this._id}}</td>
                                                            <td>{{this.name}}</td>
                                                            <td>{{this.price}}</td>
                                                            <td>{{this.quantity}}</td>
                                                        </tr>
                                                    {{/each}}
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Đóng</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Editable table -->
            <div class="row content">
                <div class="panel-body">
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="list" style="height: 300px;overflow: auto;">
                            <table class="table table-striped table-bordered table-list" id="ta1">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Thông tin khách hàng</th>
                                    <th>Hình thức thanh toán</th>
                                    <th>Thành tiền</th>
                                    <th>Ngày tạo</th>
                                    <th>Danh sách sản phẩm</th>
                                    <th>Trạng thái</th>
                                </tr>
                                </thead>
                                {{#each orderList}}
                                    <tbody>
                                    <tr>
                                        <td>{{this._id}}</td>
                                        <td>{{this.infoCustomer}}</td>
                                        <td>{{this.payment}}</td>
                                        <td>{{formatCurrency this.totalPrice}}</td>
                                        <td>{{formatDate this.created}}</td>
                                        <td>{{this.productList}}</td>
                                        <td>{{this.status}}</td>
                                        <td>
                                            <a href="orders/update/{{this._id}}"> <i class="fa fa-pen fa-lg" aria-hidden="=true"></i> </a>
                                            <a href="orders/delete/{{this._id}}" onclick="return confirm ('Bạn có chắc chắn muốn xóa ?');" > <i class="fa fa-trash fa-lg" aria-hidden="=true"></i></a>
                                        </td>
                                    </tr>
                                    </tbody>
                                {{/each}}

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

