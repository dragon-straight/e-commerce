<nav class="navbar navbar-expand navbar-dark bg-dark static-top">

    {{>nav-bars}}

</nav>

<div id="wrapper">

    <!-- Sidebar -->
    {{>sidebar}}

    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">{{pageTitle}}</li>
            </ol>


            <!-- Page Content -->

            <!-- Editable table -->
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <button  type="submit" class="btn " style="float: right;margin-right: 120px;background-color: rgb(0, 0, 1);font-size: 16px;color: white" onclick="add()  "><a href="/manufacturer/add"> Thêm mới</a></button>
                    </div>
                    </br>
                    <div id="myModal" class="modal fade" role="dialog">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <div class="row content">
                                        <div class="col-sm-12">
                                            <div class="panel panel-success">
                                                <div class="panel-heading" style="font-size: 25px;font-weight: bold; background-color: rgb(28, 188, 156);color: white"> Thông tin sản phẩm</div>
                                                <div class="panel-body">
                                                    <div class="row">
                                                        
                                                        <div class="col-md-6">
                                                            <form class="form-horizontal">
                                                                <div class="form-group">
                                                                    <label for="nl" class="col-md-4 control-label">Tên nhà sản xuất</label>
                                                                    <div class="col-md-8">
                                                                        <input type="text" class="form-control" id="kh"  required>
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label for="file1" class="col-md-4 control-label">Hình Ảnh</label>
                                                                    <div class="col-md-8">
                                                                        <input type="file" accept="image/*" class="form-control" id="ha1" name="ha1" onchange="readURL1(this);">
                                                                        <img id="pic1" src="#" alt="Hình ảnh" />
                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="panel-footer">
                                                    <div class="row">
                                                        <button type="button" class="btn btn-warning" style="float: right;margin-right: 120px;background-color: rgb(28, 188, 156);font-size: 16px;color: white" onclick="add()">Update</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End mainmenu area -->

                    <div class="row content">
                        <div class="panel-body">
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane active" id="list" style="height: 300px;overflow: auto;">
                                    <table class="table table-striped table-bordered table-list" id="ta1">
                                        <thead>
                                        <tr>
                                            <th>Tên nhà sản xuất</th>                                            
                                        </tr>
                                        </thead>
                                        {{#each manufacturerList}}
                                        <tbody>
                                        <tr>
                                            <td>{{this.name}}</td>                                          
                                            <td>
                                                <button  type="button" class="btn btn-info btn-xs" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-pencil"></span> Sửa</button>
                                                <button  type="button" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span> Xóa</button>
                                            </td>
                                        </tr>
                                       
                                        </tbody>
                                        {{/each}}

                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Editable table -->
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright © Your Website 2019</span>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.content-wrapper -->

</div>
<!-- /#wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
{{>logout}}

