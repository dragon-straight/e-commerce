<div class="header-area">
    {{> header-area}}
</div> <!-- End header area -->

<div class="site-branding-area">
    {{>site-branding-area}}
</div> <!-- End site branding area -->

<div id="undefined-sticky-wrapper" class="sticky-wrapper" style="height: 50px;">
    {{>mainmenu}}
</div>

<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>{{pageTitle}}</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Page content -->
<div class="row content">
    <div class="panel-body">
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="list" style="height: 300px;overflow: auto;">
                <div class="col-sm-4 col-md-4">
                    <blockquote>
                        <p>{{customer.info.name}}</p>
                        <small><cite title="Source Title">{{customer.info.address}}&nbsp;<i class="glyphicon glyphicon-map-marker"></i></cite></small>
                    </blockquote>

                </div>
                <div class="col-sm-4 col-md-4">
                    <blockquote>
                        <p>{{customer.email}}</p>
                        <small><cite title="Source Title">{{customer.info.sdt}}&nbsp;&nbsp;<i class="fa fa-phone"></i></cite></small>

                    </blockquote>
                    <a href="/updateProfile"><button type="button" class="btn btn-default">CHỈNH SỬA</button></a>
                </div>

            </div>

        </div>
    </div>
</div>
<!-- End page content -->


<div class="footer-top-area">
    {{>footer-top}}
</div> <!-- End footer top area -->

<div class="footer-bottom-area">
    {{>footer-bot}}
</div> <!-- End footer bottom area -->





